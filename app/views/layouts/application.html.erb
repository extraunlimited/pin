<!DOCTYPE html>
<html>
  <head>
    <title>Pin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <!-- <script src="https://js.stripe.com/v3/"></script> -->
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <%= link_to "Login Studio", root_path, class: "title"  %>


  <nav class="nav">

      <%= link_to "shop", products_path %> /
      <%= link_to "about", info_path %> /
      <%= link_to cart_path do %>
        cart (<%= @current_cart.total_quantity %>)<!-- (<%= number_to_currency @current_cart.total_price_in_dollars %>)-->
      <% end %>

    </nav> 


    <% if flash[:success].present? %>
      <div class="flash">
          <%= flash[:success] %>
        </div>
    <% end %>



    <%= yield %>


  </body>
</html>
