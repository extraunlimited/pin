<h2> cart</h2>


<% if @current_cart.order_items.any? %>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>


<tbody>

  <% @current_cart.order_items.each do |item| %>

  <tr>
    <td>
      <%= image_tag item.product.image_1.thumb.url %>
      <%= item.product.title %>
    </td>
    <td><%= number_to_currency item.product.price_in_dollars %></td>
    <td><%= item.quantity %></td>
    <td>
      <%= link_to "remove", product_order_item_path(item.product, item), method: :delete %>
      </td>

  </tr>


  <% end %>

</tbody>

</table>

<p>
  total : <%= number_to_currency @current_cart.total_price_in_dollars %>
  </p>

<p>
 <%= link_to "continue to ccheckout", new_order_path %>
</p>

<% else %>

cart empty

<% end %>
